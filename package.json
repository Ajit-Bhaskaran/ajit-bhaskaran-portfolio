{
  "name": "ajit-bhaskaran-portfolio",
  "version": "1.0.0",
  "description": "Senior Platform Engineer Portfolio - Showcasing 16+ years of DevOps expertise",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "docker:build": "docker build -t ajit-portfolio .",
    "docker:run": "docker run -p 3000:3000 ajit-portfolio",
    "deploy": "npm run build && npm run deploy:aws",
    "deploy:aws": "echo 'AWS deployment script to be implemented'"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react-syntax-highlighter": "^15.5.13",
    "bright": "^1.0.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.468.0",
    "next": "15.0.4",
    "next-mdx-remote": "^5.0.0",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-syntax-highlighter": "^15.6.6",
    "reading-time": "^1.5.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "portfolio",
    "devops",
    "platform-engineer",
    "nextjs",
    "typescript",
    "aws",
    "docker",
    "terraform"
